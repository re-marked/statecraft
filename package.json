{
  "name": "statecraft",
  "version": "2.0.0",
  "description": "Agent-driven political strategy game. 12 European countries. Unlimited betrayal.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env.local --import tsx/esm src/index.ts",
    "dev": "node --env-file=.env.local --watch --import tsx/esm src/index.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node --env-file=.env.local --import tsx/esm src/db/migrate.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@supabase/supabase-js": "^2.95.3",
    "hono": "^4.11.9",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  }
}
